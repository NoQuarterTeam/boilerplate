generator client {
  provider     = "prisma-client-js"
  relationMode = "prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String
  firstName String
  lastName  String
  role      Role    @default(USER)
  avatar    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
