{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ES2021", "DOM", "ESNext"],
    "module": "commonjs",
    "target": "ES2021",
    "strict": true,
    "skipLibCheck": true
  }
}
